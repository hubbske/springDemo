<configuration>

    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <file>log.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd_HH:mm:ss} %-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="error">
        <appender-ref ref="file" />
    </root>

</configuration>